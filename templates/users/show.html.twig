{% extends 'base.html.twig' %}

{% block title %}Users{% endblock %}

{% block body %}
    <h3>Felhasználó: {{ user.uname }}</h3>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Neve</th>
                <td>{{ user.uname }}</td>
            </tr>
            <tr>
                <th>Szerepkör</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
        </tbody>
    </table>
            
    <div class="d-flex flex-row">
        <a href="{{ path('app_users_edit', {'id': user.id}) }}" class="btn btn-primary me-3">Módosítás</a>
        {{ include('users/_delete_form.html.twig') }}
    </div>            

    <div class="d-flex">
        <a href="{{ path('app_users_index') }}"  class="btn btn-outline-primary mt-3">Vissza a listához</a>
    </div>

{% endblock %}
