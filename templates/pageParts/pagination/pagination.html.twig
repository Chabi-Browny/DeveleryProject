
<nav aria-label="..." class="mt-2 mb-2">
    <ul class="pagination">
        <li class="page-item {% if hasPrevious %}{% else %} disabled {% endif %}">
            <a class="page-link" href="{{ path( routeName, {'page': first}) }}">Első</a>
        </li>
        <li class="page-item {% if hasPrevious %}{% else %} disabled {% endif %}">
            <a class="page-link" href="{{ path( routeName, {'page': previous}) }}">Előző</a>
        </li>
        
        {% for link in links %}
            <li class="page-item {% if link.active %}active{% endif %}" aria-current="page">
                <a class="page-link" href="{% if link.active %}#{% else %}{{ path( routeName, {'page': link.linkNum}) }}{% endif %}">{{ link.linkNum }}</a>
            </li>            
        {% endfor %}
        
        <li class="page-item {% if hasNext %}{% else %}disabled{% endif %}">
            <a class="page-link" href="{{ path( routeName, {'page': next}) }}">Következő</a>
        </li>
        <li class="page-item {% if hasNext %}{% else %}disabled{% endif %}">
            <a class="page-link" href="{{ path( routeName, {'page': last}) }}">Utolsó</a>
        </li>
    </ul>
</nav>