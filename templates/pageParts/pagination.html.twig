
<h3>Üzenetek Lista</h3>
<nav aria-label="..." class="mt-2 mb-2">
    <ul class="pagination">
        <li class="page-item {% if hasPrevious %}{% else %} disabled {% endif %}">
            <a class="page-link" href="{{ absolute_url('/messageList/' ~ first) }}">Első</a>
        </li>
        <li class="page-item {% if hasPrevious %}{% else %} disabled {% endif %}">
            <a class="page-link" href="{{ absolute_url('/messageList/' ~ previous) }}">Előző</a>
        </li>
        
        {% for link in links %}
            <li class="page-item {% if link.active %}active{% endif %}" aria-current="page">
                <a class="page-link" href="{% if link.active %}#{% else %}{{ absolute_url('/messageList/' ~ link.linkNum) }}{% endif %}">{{ link.linkNum }}</a>
            </li>            
        {% endfor %}
        
        <li class="page-item {% if hasNext %}{% else %}disabled{% endif %}">
            <a class="page-link" href="{{ absolute_url('/messageList/' ~ next) }}">Következő</a>
        </li>
        <li class="page-item {% if hasNext %}{% else %}disabled{% endif %}">
            <a class="page-link" href="{{ absolute_url('/messageList/' ~ last) }}">Utolsó</a>
        </li>
    </ul>
</nav>